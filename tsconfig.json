{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "lib": ["es6"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
